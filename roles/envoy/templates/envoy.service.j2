[Unit]
Description=envoy proxy server
Wants=basic.target
After=basic.target network.target

[Service]
Type=simple
User={{ envoy_user }}
Group={{ envoy_group }}
# ref. https://www.envoyproxy.io/docs/envoy/latest/operations/cli
ExecStart={{ envoy_bin_path }} \
  --config-path "{{ envoy_conf_path }}" \
  --log-path "{{ envoy_log_dir }}/envoy.log"

[Install]
WantedBy=multi-user.target
